SECTION 3: temperature_readings.csv — Sensor Trends


#1. Visualizing Max vs Min Temperature
#● Creating Data File
nano temp_range.dat
Min 35
Max 37
#● Gnuplot script to draw a bar chart
nano temp_range_plot.gp
set terminal pngcairo size 800,600 enhanced font 'Verdana,10'
set output 'temp_range_bar.png'
set title "Min vs Max Temperature"
set style data histograms
set style fill solid 1.0 border -1
set boxwidth 0.5
set ylabel "Temperature (°C)"
set xlabel "Category"
set yrange [0:40]
plot 'temp_range.dat' using 2:xtic(1) title ''
#● Running It
gnuplot temp_range_plot.gp


#2. Visualizing Average Temperature
#● Creating Data File
nano avg_temp.dat
Average 36
#● Gnuplot script to draw a bar chart
nano avg_temp_plot.gp
set terminal pngcairo size 800,600 enhanced font 'Verdana,10'
set output 'avg_temp_bar.png'
set title "Average Temperature Reading"
set style data histograms
set style fill solid 1.0 border -1
set boxwidth 0.5
set yrange [0:40]
set ylabel "Temperature (°C)"
plot 'avg_temp.dat' using 2:xtic(1) title ''
#● Running It
gnuplot avg_temp_plot.gp


#3. Visualizing Highest & Lowest Temp Times (as labels)
#● Creating Data File
nano temp_extremes_times.dat
2025-07-01 13:00 35
2025-07-01 14:00 37
#● Gnuplot script to draw a plot as points with labels
nano temp_extremes_plot.gp
set terminal pngcairo size 1000,600 enhanced font 'Verdana,10'
set output 'temp_extremes_times.png'
set title "Temperature Extremes by Time"
set xdata time
set timefmt "%Y-%m-%d %H:%M"
set format x "%H:%M"
set xlabel "Time"
set ylabel "Temperature (°C)"
set grid
plot 'temp_extremes_times.dat' using 1:3 with points pt 7 ps 1.5 lc rgb "red" title
'Temps', \
'' using 1:3:2 with labels offset char 1,1 notitle
#● Running It
gnuplot temp_extremes_plot.gp


#4. Visualizing Sudden Temperature Spike
#● Creating Data File
nano temp_spike.dat
2025-07-01 13:00 35
2025-07-01 14:00 37
#● Gnuplot script to draw a Line Chart
nano temp_spike_plot.gp
set terminal pngcairo size 1000,600 enhanced font 'Verdana,10'
set output 'temp_spike_chart.png'
set title "Sudden Temperature Spike"
set xdata time
set timefmt "%Y-%m-%d %H:%M"
set format x "%H:%M"
set xlabel "Time"
set ylabel "Temperature (°C)"
set grid
plot 'temp_spike.dat' using 1:3 with linespoints lt rgb "orange" lw 2 pt 7 ps 1.5 title
'Temp Readings'
#● Running It
gnuplot temp_spike_plot.gp


#5. Visualizing Sudden Temperature Spike
#● Creating Direction Data File
nano temp_trend.dat
2025-07-01 14:00 Increasing
nano temp_trend_numeric.dat
2025-07-01 13:00 0
2025-07-01 14:00 1
#● Gnuplot script to draw a Line Chart
nano temp_trend_plot.gp
set terminal pngcairo size 1000,600 enhanced font 'Verdana,10'
set output 'temp_trend_plot.png'
set title "Temperature Trend Direction"
set xdata time
set timefmt "%Y-%m-%d %H:%M"
set format x "%H:%M"
set xlabel "Time"
set ylabel "Direction"
set yrange [-2:2]
set ytics ("Decreasing" -1, "Stable" 0, "Increasing" 1)
set grid
plot 'temp_trend_numeric.dat' using 1:2 with impulses lc rgb "blue" lw 2 title 'Trend'
#● Running It
gnuplot temp_trend_plot.gp
