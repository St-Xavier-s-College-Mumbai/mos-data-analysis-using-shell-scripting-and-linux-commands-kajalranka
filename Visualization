#SECTION 1: system_logs.csv — System Events
#1. Visualizing Total number of system log events vs Error
#● Creating data file
cat <<EOF > total_vs_errors.dat
Total_Logs 8
Errors 1
EOF
#● Gnuplot Script
cat <<EOF > plot_total_vs_errors.gp
set terminal png size 800,600
set output 'total_vs_errors.png'
set title "Total Logs vs Errors"
set style data histograms
set style fill solid
set ylabel "Count"
plot 'total_vs_errors.dat' using 2:xtic(1) title ''
EOF
#● Running it
gnuplot plot_total_vs_errors.gp


#2. Visualizing Distribution of log levels
#● Creating the data file
cat <<EOF > log_levels.dat
INFO 4
ERROR 1
WARNING 2
EOF
#● Gnuplot script (bar chart)
cat <<EOF > plot_log_levels.gp
set terminal png size 800,600
set output 'log_levels.png'
set title "Log Level Distribution"
set style data histograms
set style fill solid
set ylabel "Count"
set xlabel "Log Level"
plot 'log_levels.dat' using 2:xtic(1) title ''
EOF
#● Running it
gnuplot plot_log_levels.gp


#3. Visualizing Most Active User in System Logs
#● Creating the data file
cat <<EOF > user_activity.dat
kajal 2
ankit 1
EOF
#● Gnuplot Script
cat <<EOF > plot_user_activity.gp
set terminal png size 800,600
set output 'user_activity.png'
set title "User Activity in System Logs"
set style data histograms
set style fill solid
set ylabel "Number of Logs"
set xlabel "User"
plot 'user_activity.dat' using 2:xtic(1) title ''
EOF
#● Running It
gnuplot plot_user_activity.gp


#4. Visualizing Error Rate
#● Creating Data File
nano error_rate.dat
Type Count
Error 2
Non-Error 14
#● Gnuplot script to draw a bar chart
nano error_rate_plot.gp
set terminal pngcairo size 800,600 enhanced font 'Verdana,10'
set output 'error_rate_bar_chart.png'
set title "System Log: Error vs Non-Error Events"
set style data histograms
set style fill solid 1.0 border -1
set boxwidth 0.5
set ylabel "Number of Events"
set xlabel "Event Type"
set xtics rotate by -45
plot 'error_rate.dat' using 2:xtic(1) title ''
#● Running It
gnuplot error_rate_plot.gp



#SECTION 2: user_scores.csv — Student Performance
#1. Visualizing Number of Users Evaluated
#● Creating Data File
nano user_count.dat
Users 3
#● Gnuplot script to draw a bar chart
nano error_rate_plot.gp
set terminal pngcairo size 800,600 enhanced font 'Verdana,10'
set output 'user_count_bar_chart.png'
set title "Number of Users Evaluated"
set style data histograms
set style fill solid 1.0 border -1
set boxwidth 0.5
set ylabel "User Count"
set yrange [0:5] # Set a manual range so the bar doesn't look weird
set xlabel " "
plot 'user_count.dat' using 2:xtic(1) title ''
#● Running It
gnuplot error_rate_plot.gp


#2. Visualizing General Academic Performance (Bar for Avg Score)
● Creating Data File
nano avg_score.dat
Average 84.67
#● Gnuplot script to draw a bar chart
nano avg_score_plot.gp
set terminal pngcairo size 800,600 enhanced font 'Verdana,10'
set output 'avg_score_bar_chart.png'
set title "Average Score of Students"
set style data histograms
set style fill solid 1.0 border -1
set boxwidth 0.5
set ylabel "Average Score"
set yrange [0:100] # Adjust depending on how dramatic you want it to look
set xlabel " "
plot 'avg_score.dat' using 2:xtic(1) title ''
#● Running It
gnuplot avg_score_plot.gp


